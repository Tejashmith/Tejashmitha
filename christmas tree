#include<iostream>
using namespace std;
int main()
{
    int n,i,j,k;
    cout<<"Enter the number";
    cin>>n;
    for(i=1;i<=n;i++)
    {
        for(k=i;k<=n+1;k++)
        {
            cout<<" ";
        }
        for(j=1;j<=2*i-1;j++)
        {
            cout<<"* ";
        }cout<<endl;
    }
    for(i=1;i<=n+1;i++)
    {
        for(k=i;k<=n+1;k++)
        {
            cout<<" ";
        }
        for(j=1;j<=2*i-1;j++)
        {
            cout<<"* ";
        }cout<<endl;
    }
    for(i=1;i<=n+2;i++)
    {
        for(k=i;k<=n+1;k++)
        {
            cout<<" ";
        }
        for(j=1;j<=2*i-1;j++)
        {
            cout<<"* ";
        }cout<<endl;
    }
    for(i=1;i<=n-1;i++)
    {
    for(k=1;k<=n+1;k++)
        {
            cout<<" ";
        }
        for(j=i;j<=i+1;j++)
        {
            cout<<"|";
        }
        for(k=i;k<=n+1;k++)
        {
            cout<<" ";
        }cout<<endl;
    }
}
