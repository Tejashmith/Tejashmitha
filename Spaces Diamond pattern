#include<iostream>
using namespace std;
int main()
{
    int n,i,j,k;
    cout<<"Enter number of rows";
    cin>>n;
    for(i=1;i<=n;i++)
    {
        for(k=1;k<=n-i;k++)
        {
            cout<<" ";
        }
        for(j=1;j<=i;j++)
        {
            cout<<"*";
        }
        cout<<" ";
        for(j=1;j<=i;j++)
        {
            cout<<"*";
        }
        cout<<endl;
        
    }
    for(i=n;i>=1;i--)
    {
        for(k=n-i;k>=1;k--)
        {
            cout<<" ";
        }
        for(j=i;j>=1;j--)
        {
            cout<<"*";
        }
        cout<<" ";
        for(j=i;j>=1;j--)
        {
            cout<<"*";
        }
        cout<<endl;
        
    }
    
    
    return 0;
}
